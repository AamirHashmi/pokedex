<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".venusaurPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/venusaurImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/venusaur" />

            <TextView
                android:id="@+id/venusaurName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/pokedexEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/pokedexEntryText"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginLeft="10dp"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/gen1Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="ToggleButton"
                    android:textOff="GEN 1"
                    android:textOn="GEN 1"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="420dp" />

                <ToggleButton
                    android:id="@+id/gen2Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="ToggleButton"
                    android:textOff="GEN 2"
                    android:textOn="GEN 2"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="420dp" />

                <ToggleButton
                    android:id="@+id/gen3Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="ToggleButton"
                    android:textOff="GEN 3"
                    android:textOn="GEN 2"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="420dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/evolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bulbasaurSpriteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ivysaur_sprite" />

                <ImageButton
                    android:id="@+id/ivysaurSpriteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/bulbasaur_sprite" />

                <ImageButton
                    android:id="@+id/venusaurSpriteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/venusaur_sprite" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="527dp">

                <TextView
                    android:id="@+id/level16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/level32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />

            </LinearLayout>

            <TextView
                android:id="@+id/levelUpMoves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/levelUpMovesText"
                android:layout_width="match_parent"
                android:layout_height="221dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="TextView" />

        </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>